<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.portfolioapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:background="#F08C35"
            android:id="@+id/spotify"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:background="#F08C35"
            android:id="@+id/scores"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:background="#F08C35"
            android:id="@+id/library"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:background="#F08C35"
            android:id="@+id/buildBigger"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="XYZ READER"
            android:background="#F08C35"
            android:id="@+id/reader"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY APP"
            android:background="@color/colorAccent"
            android:id="@+id/capstone"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>